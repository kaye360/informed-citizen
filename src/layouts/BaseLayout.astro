---
import Skip from "../components/Skip.astro";
import Sidebar from "../components/Sidebar.astro";
import Logo from "../components/Logo.astro";
import MobileBtn from "../components/MobileBtn.astro";
import Footer from "../components/Footer.astro";
const { metaDescription, metaKeywords, metaTitle } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<meta name="description" content={metaDescription} />
		<meta name="keywords" content={metaKeywords} />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/assets/css/main.css">
		<meta name="generator" content={Astro.generator} />
		<title>{metaTitle}</title>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website">
		<meta property="og:url" content="https://informed-citizen.net">
		<meta property="og:title" content={metaTitle}>
		<meta property="og:description" content={metaDescription}>
		<meta property="og:image" content="https://informed-citizen.net/assets/img/social-card.png">

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:url" content="https://informed-citizen.net">
		<meta name="twitter:title" content={metaTitle}>
		<meta name="twitter:description" content={metaDescription}>
		<meta name="twitter:image" content="https://informed-citizen.net/assets/img/social-card.png">

	</head>
	<body>

		<Skip />

		<div class="base-layout container">

			<Sidebar />

			<div class="base-content">

				<div class="logo-wrapper mb2">
					<Logo />
					<MobileBtn />
				</div>

				<main id="content">

					<slot />

				</main>

			</div>

		</div>

		<slot name="secondary-content" />

		<Footer></Footer>
	</body>
</html>


<style>

.base-layout { 
	display : grid;
}

@media screen and (min-width : 850px) {
	.base-layout {
		grid-template-columns: 1fr 0.3fr;
	}
}

main {
	padding-inline : var(--spacing-x-default);
}

.logo-wrapper {
	display : flex;
	align-items: center;
	justify-content: space-between;
	padding : 1rem;
}

</style>
