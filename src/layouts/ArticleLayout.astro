---
import Header from "../components/Header.astro";
import SocialShare from "../components/SocialShare.astro";
const { date, author, tags, title, uri} = Astro.props
---
	
<article class="article-wrapper mt3">

	<Header
		date={date}
		author={author}
		tags={tags}
		title={title}
		uri={uri}
	/>

	{
	uri && <SocialShare uri={uri}/>
	}

	<slot /> <!-- Article Content -->

</article>


<style is:global>

.article-wrapper :where(p, blockquote, img) {
	max-width : 60ch;
}

.article-wrapper img {
	width : 100%;
	border-radius: 1rem;
}
</style>

<style>

article {
	position : relative;
	padding-inline: var(--spacing-x-default);
	background: linear-gradient(
		hsl( var(--clr-primary-2) ),
		transparent 50%
	);
}

</style>

