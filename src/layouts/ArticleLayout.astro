---
import Skip from "../components/Skip.astro";
import Logo from "../components/Logo.astro";
import MobileBtn from "../components/MobileBtn.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";
const { title, tags, date, author } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/assets/css/main.css">
		<meta name="generator" content={Astro.generator} />
		<title>{title} - All about the political ideology of {title}</title>
	</head>
	<body>

		<Skip />


		<main id="content">

			<Sidebar />

			<section>

				<div class="logo-wrapper">
					<Logo />
					<MobileBtn />
				</div>
	
				<article class="mt1">


					<header class="mb3">
						
						<div class="page-info">
							Posted on {date} by {author}
						</div>
	
						<h2 class="">{title}</h2>
	
						<div class="tags">
							{ tags.map( tag => <a href={`tag/${tag}`}>#{tag}</a> ) }
						</div>

					</header>
		
					<slot />
	
				</article>

			</section>

		</main>

		<Footer></Footer>
	</body>
</html>

<style>


main {
	display: grid;
}

article {
	position : relative;
	padding-inline: var(--spacing-x-default);
	background-color: hsl( var(--clr-primary-1), 0.3 );
}

header {
	padding : 3rem 1rem;
	background-image: url('/public/assets/img/article-heading.svg');
	background-size: cover;
	border-radius: 0.5rem;
}

.page-info {
	color : hsl( var(--clr-primary-3) );
}

h2 {
	font-size: var(--font-size-4);
	color : hsl( var(--clr-primary-1) );
}

.tags a {
	display: inline-block;
	margin-right : 1rem;
	color : hsl( var(--clr-primary-3) );
}

@media screen and (min-width : 850px) {

	main {
		grid-template-columns: 1fr 0.3fr;
	}

	article {
		order : 1;
	}

}


.logo-wrapper {
  display : flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem;
}

</style>
