---

const { title, content, link, tags = [] } = await Astro.props
---

<article class="card">
  
  <h3>{title}</h3>

  {
  tags &&
    <div class="tags">
      { tags.map( (tag: string) => <a href={`/tag/${tag}`}>#{tag}</a> )}
    </div>
  }

  <p>
    {content}
  </p>

  <a href={ link } class="read-more-link">
    Read More
    <svg width="19" height="13" viewBox="0 0 19 13" fill="none" xmlns="http://www.w3.org/2000/svg">
