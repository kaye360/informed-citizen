---
const { link = true, textColor = "#222" } = Astro.props
---

<>
{
  link 
    ? <a href="/" class="logo-link">
        <div class="logo">
          <span class="logo-first-word">informed</span>
          <svg width="18" height="57" viewBox="0 0 18 57" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M16.0693 1L1.57547 55.0918" stroke="black" stroke-width="2.5" stroke-linecap="round"/>
          </svg>
          <span class="logo-second-word">citizen</span>
        </div>
      </a>     
    : <div class="logo">
        <span class="logo-first-word">informed</span>
        <svg width="18" height="57" viewBox="0 0 18 57" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M16.0693 1L1.57547 55.0918" stroke="black" stroke-width="2.5" stroke-linecap="round"/>
          </svg>
        <span class="logo-second-word">citizen</span>
      </div>
}
</>

<style define:vars={{ textColor }}>

.logo-link {
  color : var(--textColor);
}

.logo-link:hover {
  color : hsl( var(--clr-primary-5) );
}

.logo-link:hover path {
  stroke : hsl( var(--clr-primary-3) );
}

.logo {
  display : flex;
  align-items: center;
  justify-content: center;
  gap : -1rem;
  color : var(--textColor);
  font-family: var(--font-heading);
  font-size: var(--font-size-3);
}

.logo-first-word {
  transform: translateX(4px);
}

.logo-second-word {
  transform: translateX(-8px);
}

</style>